{% extends 'base.html.twig' %}

{% block title %}Création de Film{% endblock %}
{% block pageTitle %}Création de Film{% endblock %}

{% block body %}
<form action="" method="POST">
    <div class="grid grid-cols-2 gap-2">
        <label for="nom">
            Nom :
        </label>
        <input class="border border-gray-700" type="text" name="nom" id="nom" />

        <label for="resume">
            Résumé :
        </label>
        <textarea class="border border-gray-700" name="resume" id="resume"></textarea>

        <label for="release_date">
            Date de sortie :
        </label>
        <input class="border border-gray-700" type="date" step="1" min="1" name="release_date" id="release_date" />

        <label for="genre">
            Genre :
        </label>
        <select class="border border-gray-700" name="genre" id="genre">
            <option value="" />
            {% for genre in genres %}
                <option value="{{ genres.id }}">{{ genres.name }}</option>
            {% endfor %}
        </select>

        <label for="acteur">
            Acteurs :
        </label>
        <select class="border border-gray-700" name="acteur" id="acteur">
            <option value="" />
            {% for acteur in acteurs %}
                <option value="{{ acteurs.id }}">{{ acteurs.name }}</option>
            {% endfor %}
        </select>

        <div class="col-span-2 flex justify-around">
            <button class="border border-gray-700 rounded-md px-4 py-1" type="reset">Annuler</button>
            <button class="border border-gray-700 rounded-md px-4 py-1" type="submit">Enregistrer</button>
        </div>
    </div>

</form>
{% endblock %}
